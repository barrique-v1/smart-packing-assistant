apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: packing-assistant
  labels:
    app: smart-packing-assistant
type: Opaque
data:
  # PostgreSQL Configuration (Base64 encoded)
  # DO NOT commit actual values to Git!
  # Run: bash scripts/create-k8s-secrets.sh (Linux/macOS) or scripts/create-k8s-secrets.ps1 (Windows)
  # This will read .env and generate the actual 01-postgres-secret.yaml file
  postgres-db: POSTGRES_DB_BASE64
  postgres-user: POSTGRES_USER_BASE64
  postgres-password: POSTGRES_PASSWORD_BASE64

  # OpenAI API Key (Base64 encoded)
  openai-api-key: OPENAI_API_KEY_BASE64
