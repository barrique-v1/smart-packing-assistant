apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: packing-assistant
  labels:
    app: smart-packing-assistant
type: Opaque
data:
  # PostgreSQL Configuration (Base64 encoded)
  # Example values - DO NOT use in production!
  # Use the create-k8s-secrets.sh script instead to generate from .env
  postgres-db: cGFja2luZ19hc3Npc3RhbnQ=       # packing_assistant
  postgres-user: YWRtaW4=                      # admin
  postgres-password: c2VjcmV0MTIz              # secret123

  # OpenAI API Key (Base64 encoded)
  # Replace with your actual key using: echo -n "sk-your-key" | base64
  # Or better: use ./scripts/create-k8s-secrets.sh
  openai-api-key: c2stcHJvai15b3VyLWFwaS1rZXktaGVyZQ==  # sk-proj-your-api-key-here

# RECOMMENDED APPROACH:
# Instead of manually editing this file, use the automated script:
#   $ ./scripts/create-k8s-secrets.sh
#
# This script reads from your .env file and creates the secret automatically,
# avoiding manual base64 encoding and reducing errors.
